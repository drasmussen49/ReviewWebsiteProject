@model IEnumerable<ReviewWebsiteProject.Models.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/Products.css" />
    <link href="https://fonts.googleapis.com/css?family=Tomorrow&display=swap" rel="stylesheet">
    <title>Index</title>
</head>
<body>
    <div class="header"> Our Project </div>
    <div class="body">
        <div class="flex-container">
           
            @foreach (var product in Model)
            {
                <div class="flex-item">
                    <h3 class="flex-element">@product.Name</h3>
                    <a href="/Product/Details/@product.Id" class="flex-element">Details</a>
                    <p class="flex-element">@product.Description</p>
                    <img class="img" src=@product.Image />
                </div>
            }
        </div>
    </div>
    <div class="footer">Tom Ghassan Eric Dan </div>
</body>
</html>

